{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tkd/contracts/tkd.event.v0.schema.json",
  "title": "TKD Event Envelope v0",
  "type": "object",
  "required": [
    "schema_version",
    "event_id",
    "event_type",
    "occurred_at",
    "agent",
    "organization",
    "workspace",
    "provenance",
    "payload"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "tkd.event.v0"
    },
    "event_id": {
      "type": "string",
      "minLength": 1
    },
    "event_type": {
      "type": "string",
      "minLength": 1
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "agent": {
      "type": "object",
      "required": [
        "id",
        "runtime"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "runtime": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": true
    },
    "organization": {
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": true
    },
    "workspace": {
      "type": "object",
      "required": [
        "id",
        "project_id",
        "scope",
        "repo_id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "project_id": {
          "type": "string",
          "minLength": 1
        },
        "scope": {
          "type": "string",
          "enum": [
            "repo",
            "org"
          ]
        },
        "repo_id": {
          "type": "string",
          "minLength": 1
        },
        "repo_remote": {
          "type": "string"
        },
        "repo_branch": {
          "type": "string"
        },
        "repo_commit": {
          "type": "string"
        },
        "repo_root": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "provenance": {
      "type": "object",
      "required": [
        "source",
        "payload_sha256",
        "rubric_version"
      ],
      "properties": {
        "source": {
          "type": "string",
          "minLength": 1
        },
        "payload_sha256": {
          "type": "string",
          "pattern": "^sha256:[a-fA-F0-9]{64}$"
        },
        "rubric_version": {
          "type": "string",
          "minLength": 1
        },
        "confidence": {
          "type": [
            "number",
            "null"
          ]
        }
      },
      "additionalProperties": true
    },
    "payload": {
      "type": "object"
    }
  },
  "additionalProperties": false
}
